@using Microsoft.AspNet.Identity
@using WebMatrix.Data

@{ 
    var db = Database.Open("MapuaCanteenDBContext");
    var selectQueryString = "SELECT * FROM ShoppingCarts ORDER BY ID";
    var countQueryString = "SELECT COUNT(*) FROM ShoppingCarts";
    var cart = db.QueryValue(countQueryString);

}

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="glyphicon glyphicon-shopping-cart"></span> @cart - Items<span class="caret"></span></a>
            <ul class="dropdown-menu dropdown-cart" role="menu">
@foreach (var order in db.Query(selectQueryString))
{
                <li>
                    <span class="item">
                        <span class="item-left">
                            <img src="http://placehold.it/50x50" alt="" />
                            <span class="item-info">
                                <span>@order.Item</span>
                                <span>₱@order.Price</span>
                            </span>
                        </span>
                        <span class="item-right">
                            <span>Qty: @order.Quantity</span>
                            <button class="btn btn-xs btn-danger pull-right">x</button>
                        </span>
                    </span>
                </li>
}
                <li class="divider"></li>
                <li><a class="btn btn-block text-center" data-toggle="modal" data-target="#cartModal">View Cart</a></li>
            </ul>
        </li>
    </ul>
}